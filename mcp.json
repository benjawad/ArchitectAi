{
  "name": "architectai-mcp",
  "version": "1.0.0",
  "displayName": "ArchitectAI - Design Pattern Analysis & AI Refactoring",
  "description": "Autonomous cloud refactoring with design pattern detection, AI-powered recommendations, and architecture visualization",
  "author": "ArchitectAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/architectai-mcp.git"
  },
  "homepage": "https://github.com/yourusername/architectai-mcp",
  "bugs": {
    "url": "https://github.com/yourusername/architectai-mcp/issues"
  },
  "keywords": [
    "design-patterns",
    "code-analysis",
    "architecture",
    "refactoring",
    "ai",
    "uml",
    "python",
    "mcp"
  ],
  "categories": [
    "code-analysis",
    "ai-powered",
    "developer-tools"
  ],
  "capabilities": {
    "tools": [
      {
        "name": "analyze_patterns",
        "description": "Analyze Python code for design patterns and get AI-powered recommendations",
        "examples": [
          {
            "input": {
              "code": "class Database:\n    _instance = None\n    def __new__(cls):\n        if cls._instance is None:\n            cls._instance = super().__new__(cls)\n        return cls._instance",
              "enrich": true,
              "provider": "nebius"
            },
            "output": "Detects Singleton pattern with recommendations"
          }
        ]
      },
      {
        "name": "analyze_project",
        "description": "Analyze entire project structure from uploaded ZIP file",
        "examples": [
          {
            "input": {
              "zip_path": "/path/to/project.zip"
            },
            "output": "Project structure analysis with PlantUML diagrams"
          }
        ]
      },
      {
        "name": "detect_patterns",
        "description": "Detect design patterns with optional project structure context",
        "examples": [
          {
            "input": {
              "code": "# Python code",
              "enrich": true,
              "provider": "openai"
            },
            "output": "Pattern detection results with UML diagrams"
          }
        ]
      },
      {
        "name": "get_refactoring_proposal",
        "description": "Get AI-powered refactoring recommendations",
        "examples": [
          {
            "input": {
              "code": "# Current code",
              "instruction": "Extract Strategy pattern for payment methods",
              "provider": "sambanova"
            },
            "output": "Detailed refactoring proposal with code suggestions"
          }
        ]
      },
      {
        "name": "generate_uml",
        "description": "Generate PlantUML diagrams for Python code structure",
        "examples": [
          {
            "input": {
              "code": "class User:\n    def __init__(self, name): ...",
              "include_methods": true
            },
            "output": "PlantUML class diagram code"
          }
        ]
      }
    ]
  },
  "requirements": {
    "python": ">=3.10",
    "dependencies": {
      "mcp": ">=0.1.0",
      "anthropic": ">=0.7.0",
      "plantuml": ">=0.3.0",
      "pydantic": ">=2.0.0",
      "langchain-core": ">=0.1.0"
    }
  },
  "environment": {
    "NEBIUS_API_KEY": "Your Nebius API key",
    "OPENAI_API_KEY": "Your OpenAI API key (optional)",
    "SAMBANOVA_API_KEY": "Your SambaNova API key (optional)"
  },
  "installation": {
    "pip": "pip install architectai-mcp",
    "github": "git clone https://github.com/yourusername/architectai-mcp.git && cd architectai-mcp && pip install -e ."
  },
  "usage": {
    "quick_start": "python mcp_server.py",
    "with_blaxcel": "blaxcel push --config mcp.json --entry-point mcp_server.py",
    "test": "pytest tests/"
  },
